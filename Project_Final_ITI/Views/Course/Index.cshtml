@model IEnumerable<Project_Final_ITI.Models.Course>

@{
    ViewData["Title"] = "Courses";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">📚 Courses Management</h2>
        <a asp-controller="Course" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Course
        </a>
    </div>

    <!-- Search Form -->
    <form asp-action="Index" asp-controller="Course" method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchString" value="@Context.Request.Query["searchString"]"
                   class="form-control" placeholder="Search by course name or category..." />
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>

    <!-- Courses Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Course Name</th>
                        <th>Category</th>
                        <th>Instructor</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No courses found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var course in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@course.CourseName</td>
                                <td>@course.Category</td>
                                <td>@course.InstructorID</td>
                                <td class="text-center">
                                    <a asp-controller="Course" asp-action="Edit" asp-route-id="@course.CourseId"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <form asp-action="Delete" asp-controller="Course" asp-route-id="@course.CourseId"
                                          method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-danger">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
