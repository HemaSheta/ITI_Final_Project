@model Training_Managment_System.ViewModels.CourseViewModel

@{
    ViewData["Title"] = "Delete Course";
}

<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h2 class="mb-0">Delete Course</h2>
        </div>

        <div class="card-body">
            <h4 class="text-center text-muted mb-4">Are you sure you want to delete this course?</h4>

            <dl class="row">
                <dt class="col-sm-3">Course Name</dt>
                <dd class="col-sm-9">@Model.CourseName</dd>

                <dt class="col-sm-3">Category</dt>
                <dd class="col-sm-9">@Model.Category</dd>

                <dt class="col-sm-3">Instructor ID</dt>
                <dd class="col-sm-9">@Model.InstructorId</dd>
            </dl>

            <form asp-action="DeleteConfirmed" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="CourseId" />

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
