@model List<Project_Final_ITI.Models.User>

@{
    ViewData["Title"] = "Users";
    var currentName = Context.Request.Query["name"].ToString();
    var currentRole = Context.Request.Query["role"].ToString();
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">👤 Users Management</h2>
        <a asp-action="Add" class="btn btn-primary">
            <i class="bi bi-person-plus"></i> Add New User
        </a>
    </div>

    <!-- Search Form -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">

            <!-- Search by name -->
            <input type="text" name="name" value="@currentName"
                   class="form-control" placeholder="Search by name..." />

            <!-- Filter by role -->
            <select name="role" class="form-select" style="max-width:150px;">
                <option value="All" selected="@(currentRole == "All")">All Roles</option>
                <option value="Admin" selected="@(currentRole == "Admin")">Admin</option>
                <option value="Instructor" selected="@(currentRole == "Instructor")">Instructor</option>
                <option value="Trainee" selected="@(currentRole == "Trainee")">Trainee</option>
            </select>

            <!-- Search Button -->
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-search"></i> Search
            </button>

            <!-- Reset Button -->
            @if (!string.IsNullOrEmpty(currentName) || (!string.IsNullOrEmpty(currentRole) && currentRole != "All"))
            {
                <a asp-action="Index" class="btn btn-outline-danger">
                    <i class="bi bi-x-circle"></i> Reset
                </a>
            }
        </div>
    </form>

    <!-- Users Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Role</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No users found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td class="fw-semibold">@user.UserName</td>
                                <td>@user.Email</td>
                                <td>@user.Role</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@user.UserId"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@user.UserId"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
