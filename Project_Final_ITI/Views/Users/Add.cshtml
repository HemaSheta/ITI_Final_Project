@model Training_Managment_System.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Add User";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">Add New User</h3>
        </div>
        <div class="card-body">
            <form asp-action="Add" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="UserName" class="form-label"></label>
                    <input asp-for="UserName" class="form-control" placeholder="Enter username" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" placeholder="Name@ITI.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Role" class="form-label"></label>
                    <select asp-for="Role" class="form-control">
                        <option value="">-- Select Role --</option>
                        <option>Admin</option>
                        <option>Instructor</option>
                        <option>Trainee</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Back to List</a>
                    <button type="submit" class="btn btn-success px-4">Save</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
