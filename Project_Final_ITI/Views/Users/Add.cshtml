@model Training_Managment_System.ViewModels.UserViewModel

@{
    ViewData["Title"] = "Add User";
}

<h2>Add User</h2>

<form asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" style="width:500px;" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Name@ITI.com" style="width:500px;" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control" style="width:150px;">
            <option value="">-- Select Role --</option>
            <option>Admin</option>
            <option>Instructor</option>
            <option>Trainee</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</form>