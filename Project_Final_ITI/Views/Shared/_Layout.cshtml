<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Project_Final_ITI</title>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <!-- Google Fonts for stylish thin logo -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500&display=swap" rel="stylesheet">

    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Project_Final_ITI.styles.css" asp-append-version="true" />

    <style>
        /* Stylish thin logo */
        .navbar-brand {
            font-family: 'Poppins', sans-serif;
            font-weight: 300;
            font-size: 1.8rem;
            color: #2c3e50;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            margin-left: 0; 
        }

            .navbar-brand:hover {
                color: #1f2c3d; 
                text-decoration: none;
            }

        /* Navbar links */
        .navbar-nav .nav-link {
            color: #495057;
            transition: all 0.3s ease;
        }

            .navbar-nav .nav-link:hover {
                color: #333; 
                text-decoration: underline; 
            }

        /* Footer Style */
        footer.footer {
            padding: 1rem 0;
            background-color: #f8f9fa;
            text-align: center;
        }

        /* Body minimum height for sticky footer */
        body {
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        main {
            flex: 1;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    Training Management System
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Home Page") ? "active" : "")" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Courses") ? "active" : "")" asp-controller="Course" asp-action="Index">Courses</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Sessions") ? "active" : "")" asp-controller="Sessions" asp-action="Index">Sessions</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Users") ? "active" : "")" asp-controller="Users" asp-action="Index">Users</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @((ViewData["Title"]?.ToString() == "Grades") ? "active" : "")" asp-controller="Grades" asp-action="Index">Grades</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="flex-grow-1 py-4">
        <div class="container">
            @RenderBody()
        </div>
    </main>

    <footer class="footer border-top mt-auto">
        <div class="container">
            &copy; 2025 - Project_Final_ITI - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
