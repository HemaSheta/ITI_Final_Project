@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";

    // Buttons Data
    var buttons = new List<dynamic>
    {
        new { Text = "View Courses", Controller = "Course", Action = "Index", Style = "btn-light text-primary" },
        new { Text = "View Sessions", Controller = "Sessions", Action = "Index", Style = "btn-outline-light" },
        new { Text = "View Users", Controller = "Users", Action = "Index", Style = "btn-outline-light" },
        new { Text = "View Grades", Controller = "Grades", Action = "Index", Style = "btn-outline-light" }
    };

    // Features Data with icons and colors
    var features = new List<dynamic>
    {
        new { Title="Course Management", Description="Add, edit, delete courses and assign instructors easily.", Icon="bi-book", Color="#4a90e2" },
        new { Title="Session Management", Description="Manage sessions, start/end dates, and search by course name.", Icon="bi-calendar-event", Color="#357ABD" },
        new { Title="User Management", Description="Manage users, add/edit/delete trainee or instructor profiles.", Icon="bi-people", Color="#f39c12" },
        new { Title="Grades Management", Description="Record grades, track performance, and generate reports.", Icon="bi-journal-check", Color="#27ae60" }
    };
}

<div class="container mt-5">

    <!-- Hero Section -->
    <div class="p-5 text-center text-white rounded-3" style="background: linear-gradient(135deg, #4a90e2, #357ABD);">
        <h1 class="display-4 fw-bold">Training Management System</h1>
        <p class="lead mb-4">Manage courses, sessions, users, and grades efficiently with our system.</p>
        <div class="d-flex justify-content-center flex-wrap gap-3">
            @foreach (var btn in buttons)
            {
                <a asp-controller="@btn.Controller" asp-action="@btn.Action" class="btn btn-lg @btn.Style px-4 shadow">@btn.Text</a>
            }
        </div>
    </div>

    <!-- Why Choose Our System -->
    <div class="mt-5 p-5 rounded-3 text-center" style="background-color: #f8f9fa;">
        <h2 class="mb-4">Why Choose Our System?</h2>
        <div class="row g-4 justify-content-center">
            @foreach (var feature in features)
            {
                <div class="col-md-3">
                    <div class="p-4 rounded shadow-sm h-100 hover-shadow" style="border-top: 5px solid @feature.Color;">
                        <i class="bi @feature.Icon mb-3" style="font-size: 3rem; color:@feature.Color;"></i>
                        <h5>@feature.Title</h5>
                        <p>@feature.Description</p>
                    </div>
                </div>
            }
        </div>
    </div>

</div>

<!-- Bootstrap Icons CDN -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

<style>
    .hover-shadow:hover {
        box-shadow: 0 0.75rem 1.25rem rgba(0,0,0,0.2) !important;
        transform: translateY(-5px);
        transition: all 0.3s ease;
    }

    a.btn:hover {
        transform: translateY(-2px);
        transition: all 0.2s ease;
    }

    h2 {
        font-weight: 700;
    }
</style>
