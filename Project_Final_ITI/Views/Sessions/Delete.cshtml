@model Project_Final_ITI.Models.Session
@{
    ViewData["Title"] = "Delete Session";
}

<h2>Delete Session</h2>
<p>Are you sure you want to delete this Session?</p>

<dl class="row">
    <dt class="col-sm-3">Course</dt>
    <dd class="col-sm-9">@Model.Course?.CourseName</dd>

    <dt class="col-sm-3">Start Date</dt>
    <dd class="col-sm-9">@Model.StartDate:yyyy-MM-dd</dd>

    <dt class="col-sm-3">End Date</dt>
    <dd class="col-sm-9">@Model.EndDate:yyyy-MM-dd</dd>
</dl>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="SessionId" />
    <button type="submit" class="btn btn-danger">Confirm Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
