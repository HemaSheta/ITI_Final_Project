@model IEnumerable<Project_Final_ITI.Models.Session>

@{
    ViewData["Title"] = "Sessions";
    var search = ViewData["CurrentFilter"] as string;
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">🗓️ Sessions Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Session
        </a>
    </div>

    <!-- Search Form -->
    <form asp-action="Index" method="get" class="mb-3">
        <div class="input-group">
            <input name="search" value="@search" class="form-control" placeholder="Search by course name..." />

            <!-- Search Button -->
            <button type="submit" class="btn btn-outline-secondary">
                <i class="bi bi-search"></i> Search
            </button>

            <!-- Reset Button يظهر بس لو فيه search -->
            @if (!string.IsNullOrEmpty(search))
            {
                <a asp-action="Index" class="btn btn-outline-danger">
                    <i class="bi bi-x-circle"></i> Reset
                </a>
            }
        </div>
    </form>

    <!-- Sessions Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Course</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="4" class="text-center text-muted">No sessions found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Course?.CourseName</td>
                                <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
                                <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
                                <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.SessionId"
                                       class="btn btn-sm btn-info me-1">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                    <a asp-action="Edit" asp-route-id="@item.SessionId"
                                       class="btn btn-sm btn-warning me-1">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.SessionId"
                                       class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
