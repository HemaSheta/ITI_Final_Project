@model IEnumerable<Project_Final_ITI.Models.Session>
@{
    ViewData["Title"] = "Sessions";
    var search = ViewData["CurrentFilter"] as string;
}

<h2>Sessions</h2>

<form asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input name="search" value="@search" class="form-control" placeholder="Search by course name..." />
        <button type="submit" class="btn btn-primary">Search</button>
        <a asp-action="Index" class="btn btn-secondary">Reset</a>
    </div>
</form>

<p>
    <a asp-action="Create" class="btn btn-success">+ Add New Session</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Course</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>@item.Course?.CourseName</td>
        <td>@item.StartDate.ToString("yyyy-MM-dd")</td>
        <td>@item.EndDate.ToString("yyyy-MM-dd")</td>
        <td class="text-end">
            <a asp-action="Details" asp-route-id="@item.SessionId" class="btn btn-outline-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.SessionId" class="btn btn-outline-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.SessionId" class="btn btn-outline-danger btn-sm">Delete</a>
        </td>
    </tr>
}
    </tbody>
</table>
