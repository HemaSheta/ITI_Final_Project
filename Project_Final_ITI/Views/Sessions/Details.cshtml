@model Project_Final_ITI.Models.Session
@{
    ViewData["Title"] = "Session Details";
}

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Session Details</h3>
    </div>
    <div class="card-body">
        <dl class="row mb-3">

            <dt class="col-sm-3 fw-bold">SessionId</dt>
            <dd class="col-sm-9">@Model.SessionId</dd>

            <dt class="col-sm-3 fw-bold">Course</dt>
            <dd class="col-sm-9">@Model.Course?.CourseName</dd>

            <dt class="col-sm-3 fw-bold">Start Date</dt>
            <dd class="col-sm-9">@Model.StartDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3 fw-bold">End Date</dt>
            <dd class="col-sm-9">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        </dl>

        <div class="d-flex gap-2 justify-content-start">
            <a asp-action="Index" class="btn btn-secondary">
                Back
            </a>
            <a asp-action="Edit" asp-route-id="@Model.SessionId" class="btn btn-primary">
                Edit
            </a>
        </div>
    </div>
</div>
