@model Project_Final_ITI.Models.Grade
@{
    ViewData["Title"] = "Delete Grade";
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header bg-danger text-white text-center">
            <h3 class="mb-0">Delete Grade</h3>
        </div>

        <div class="card-body">
            <h5 class="text-center text-muted mb-3">Are you sure you want to delete this grade?</h5>

            <dl class="row">
                <dt class="col-sm-3">Trainee</dt>
                <dd class="col-sm-9">@Model.User?.UserName</dd>

                <dt class="col-sm-3">Session</dt>
                <dd class="col-sm-9">@Model.Session?.SessionId</dd>

                <dt class="col-sm-3">Course</dt>
                <dd class="col-sm-9">@Model.Session?.Course?.CourseName</dd>

                <dt class="col-sm-3">Grade Value</dt>
                <dd class="col-sm-9">@Model.Value</dd>
            </dl>

            <!-- IMPORTANT: post to Delete with the id in the route -->
            <form asp-action="Delete" asp-route-id="@Model.GradeId" method="post">
                @Html.AntiForgeryToken()
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary px-4">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4">Delete</button>
                </div>
            </form>
        </div>
    </div>
</div>
