@model IEnumerable<Project_Final_ITI.Models.Grade>

@{
    ViewData["Title"] = "Grades";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold text-primary">🎓 Grades Management</h2>
        <a asp-controller="Grades" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Add New Grade
        </a>
    </div>

    <!-- Grades Table -->
    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Trainee</th>
                        <th>Session</th>
                        <th>Course</th>
                        <th>Grade Value</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (!Model.Any())
                    {
                        <tr>
                            <td colspan="5" class="text-center text-muted">No grades found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var grade in Model)
                        {
                            <tr>
                                <td>@grade.User?.UserName</td>
                                <td>@grade.Session?.SessionId</td>
                                <td>@grade.Session?.Course?.CourseName</td>
                                <td class="fw-semibold">@grade.Value</td>
                                <td class="text-center">
                                    <a asp-controller="Grades" asp-action="Details" asp-route-id="@grade.GradeId"
                                       class="btn btn-sm btn-info">
                                        <i class="bi bi-eye"></i> Details
                                    </a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
